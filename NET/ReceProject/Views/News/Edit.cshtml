@model ReceProject.Models.News

@{
    ViewData["Title"] = "Ändra";
}

<h1>Ändra artikel</h1>

<div>
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="formMargin">
            <label asp-for="Header" class="control-label"></label>
            <input asp-for="Header" class="form-control" />
            <span asp-validation-for="Header" class="text-danger"></span>
        </div>
        <div class="formMargin">
            <label asp-for="Text" class="control-label"></label>
            <textarea asp-for="Text" class="form-control textareaBigger"></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="formMargin">
            <label asp-for="Hashtags" class="control-label"></label>
            <input asp-for="Hashtags" class="form-control" />
            <span asp-validation-for="Hashtags" class="text-danger"></span>
        </div>
        <div class="formMargin">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" readonly />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="formMargin">
            <label asp-for="Publish" class="control-label"></label>
            <input asp-for="Publish" class="form-control" readonly />
            <span asp-validation-for="Publish" class="text-danger"></span>
        </div>
        <div class="formMargin">
            <label asp-for="ImageName" class="control-label"></label>
            <input asp-for="ImageName" class="form-control" readonly />
            <span asp-validation-for="ImageName" class="text-danger"></span>
        </div>
                <div class="formMargin">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="formMargin">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
