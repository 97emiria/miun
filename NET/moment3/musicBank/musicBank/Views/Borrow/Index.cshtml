@model IEnumerable<musicBank.Models.Borrow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Borrower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Borrower.NameBorrower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BorrowID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BorrowID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BorrowID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



