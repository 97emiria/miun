@model ReceProject.Models.News

@{
    ViewData["Title"] = "Skapa ny artikel";
}

<h1>Skapa ny artikel</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="formMargin">
        <label asp-for="Header" class="control-label"></label>
        <input asp-for="Header" class="form-control" />
        <span asp-validation-for="Header" class="text-danger"></span>
    </div>
    <div class="formMargin">
        <label asp-for="Text" class="control-label"></label>
        <textarea asp-for="Text" class="form-control textareaBigger"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="formMargin">
        <label asp-for="Hashtags" class="control-label"></label>
        <input asp-for="Hashtags" class="form-control" />
        <span asp-validation-for="Hashtags" class="text-danger"></span>
    </div>
    <div class="formMargin">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="formMargin">
        <input type="submit" value="Skapa artikel" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
