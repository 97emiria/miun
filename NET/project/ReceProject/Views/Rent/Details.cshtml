@model ReceProject.Models.Rent

@{
    ViewData["Title"] = "Hantera enskild bokning";

    string none = "-";
}

<h1>Hantera bokning</h1>

<div class="detailsButtons">
    <a asp-action="Edit" asp-route-id="@Model?.Id">
        <img src="~/images/iconPen.png" alt="Ã„ndra">
    </a>
    <a asp-action="Delete" asp-route-id="@Model?.Id">
        <img src="~/images/iconRemove.png" alt="Papperskorg">
    </a>
</div>

<h2>Bokningsinfo</h2>
<dl class="row">
    <dt class="col-sm-2">
        Bokat sedan:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TimeRentedSince)
    </dd>
    <dt class="col-sm-2">
        Kontorsrum:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Room.Name)
    </dd>
    <dt class="col-sm-2">
        Pris:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Room.Price) kr/h
    </dd>
</dl>

<h2>Kund info</h2>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Phone)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Phone)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Note)
    </dt>
    <dd class="col-sm-10">
        <!--Dosent work, fix it-->
        @if (String.IsNullOrEmpty(@Html.DisplayFor(model => model.Note).ToString()))
        {
            @none
        }
        else
        {
            @Html.DisplayFor(model => model.Note)
        }
    </dd>
</dl>
