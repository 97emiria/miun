@model ReceProject.Models.Rent

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="formMargin">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="formMargin">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="formMargin">
        <label asp-for="Note" class="control-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="formMargin notToChange">
        <label asp-for="RoomId" class="control-label"></label>
        <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId" ></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>
    <div class="formMargin notToChange">
        <label asp-for="RentedByEmployee" class="control-label"></label>
        <input asp-for="RentedByEmployee" class="form-control" />
        <span asp-validation-for="RentedByEmployee" class="text-danger"></span>
    </div>

        <div class="formMargin notToChange">
        <label asp-for="TimeRentedSince" class="control-label"></label>
        <input asp-for="TimeRentedSince" class="form-control" />
        <span asp-validation-for="TimeRentedSince" class="text-danger"></span>
    </div>

    <div class="formMargin">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
