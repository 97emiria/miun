@model IEnumerable<ReceProject.Models.Room>

@{
    ViewData["Title"] = "Kontorsrum";
}

<div class="adminTop">
    <div>
        <h1>@ViewData["Title"]</h1>
    </div>
    <div>
        <a asp-action="Create" class="btnCreate">
           <img class="imgAdd" src="~/images/iconAdd.png" alt="">
           Lägg till nytt kontorsrum
        </a>
    </div>
</div>

<section class="search">
    <form asp-controller="Rent" asp-action="Index" method="get">
        <div>
            <input type="text" name="SearchString" placeholder="Rummets namn" />
        </div>
        <div>
            <input type="submit" value="Sök" />
        </div>
    </form>
</section>

<section class="admin_RoomList">
    @foreach (var item in Model.Reverse())
    {
          <div class="admin_indexList">

            <div class="image">
                <img src="~/uploadsRooms/small_@Html.DisplayFor(modelItem => item.ImageName)" alt="">
            </div>

            <div class="text">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(modelItem => item.Description)
                    </dd>
                </dl>
            </div>

            <div class="icon">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/images/iconPen.png" alt="">
                </a>
            </div>
        </div>
    }
</section>
