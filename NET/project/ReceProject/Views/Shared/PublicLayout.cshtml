<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />

    <!-- "Min" Css -->
    <link rel="stylesheet" href="~/Style/main.css" />

    <!-- Body & header font import -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dongle:wght@400;700&family=Poiret+One&display=swap"
        rel="stylesheet">
</head>

<body>

     <header>
           <div>
                <section class="logoBox">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/Images/recelogo.png" alt="">
                    </a>
                </section>
                <nav>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Contact">Kontakt</a></li>
                        <li><a asp-controller="Home" asp-action="OfficeRooms">Våra kontorsrum</a></li>
                    </ul>
                </nav>
           </div>
        </header>

    <main role="main" class="maxWidthAndCenter">
        @RenderBody()
    </main>

    <footer>
        <div class="footerFlex">
            <div>&copy; 2022 Rece</div>
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                <a asp-area="" asp-controller="Home" asp-action="OfficeRooms">Våra kontorsrum</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
